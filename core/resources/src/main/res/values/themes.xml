<resources>
    <!-- Base application theme. -->
    <style name="Theme.Animemania" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 colors -->
        <item name="colorPrimary">@color/red_7</item>
        <item name="colorOnPrimary">@color/gray_0</item>
        <item name="colorSecondary">@color/red_6</item>
        <item name="colorOnSecondary">@color/gray_0</item>
        <item name="colorTertiary">#616B74</item>
        <item name="colorOnTertiary">@color/gray_0</item>
        <item name="background">@color/gray_9</item>
        <item name="backgroundColor">@color/gray_9</item>
        <item name="colorOnBackground">@color/gray_0</item>
        <item name="colorSurface">@color/gray_8</item>
        <item name="colorOnSurface">@color/gray_0</item>

        <!-- Material 3 Typography -->
        <item name="textAppearanceDisplayLarge">@style/displayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/displayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/displaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/headLineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/headLineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/headLineSmall</item>
        <item name="textAppearanceTitleLarge">@style/titleLarge</item>
        <item name="textAppearanceTitleMedium">@style/titleMedium</item>
        <item name="textAppearanceTitleSmall">@style/titleSmall</item>
        <item name="textAppearanceBodyLarge">@style/bodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/bodyMedium</item>
        <item name="textAppearanceBodySmall">@style/bodySmall</item>
        <item name="textAppearanceLabelLarge">@style/labelLarge</item>
        <item name="textAppearanceLabelMedium">@style/labelMedium</item>
        <item name="textAppearanceLabelSmall">@style/labelSmall</item>

        <!-- Status and Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>>
    </style>

    <style name="displayLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">57sp</item>
    </style>

    <style name="displayMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">45sp</item>
        <item name="lineHeight">52sp</item>
    </style>

    <style name="displaySmall" parent="@android:style/TextAppearance">
        <item name="android:textSize">36sp</item>
        <item name="lineHeight">44sp</item>
    </style>

    <style name="headLineLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">40sp</item>
    </style>

    <style name="headLineMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">36sp</item>
    </style>

    <style name="headLineSmall" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="titleLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="titleMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="titleSmall" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="bodyLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="bodyMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="bodySmall" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="labelLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="labelMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="labelSmall" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="textAppearanceTabLayoutSelected" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textAppearanceTabLayoutUnSelected" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>
</resources>